datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model PlugDuck_PatCount {
  userId String @id
  pats   Int    @default(0)
}

model PlugCt_Score {
  userId String @id

  pointsThisCycle Int @default(0)
  pointsLastCycle Int @default(0)
}

model PlugPets_Pet {
  // If we ever expand this to multiple servers, add a guildId
  id     Int     @id @default(autoincrement())
  userId String
  active Boolean @default(true)
  path   String
}

model PlugFc_Codes {
  userId String  @id
  ds     String?
  go     String?
  switch String?
}

model PlugRole_RoleConfig {
  roleId      String  @id
  requestable Boolean @default(false)
}

model PlugPokecom_JoinDateCache {
  userId   String   @id
  joinDate DateTime
}
