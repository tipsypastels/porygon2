// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Settings {
  key   String @id @db.VarChar(25)
  value Json
}

model FriendCodes {
  userId String  @id
  ds     String?
  switch String?
  go     String?
}

model RoleSettings {
  roleId        String  @id
  isBound       Boolean @default(false)
  isRequestable Boolean @default(false)
}

model BoundRoles {
  userId String
  roleId String

  @@id([userId, roleId])
}
